@model List<Product>;

<h1>
    Oversigt over boads
</h1>

<!-- BOARD Container -->
<div class="boardoversigt">

    @foreach (var board in Model)
    {
        <div class="boardbox" id="board-@board.ProductId">
            <a asp-controller="rental" asp-action="board" asp-route-id="@board.ProductId">
                <h3>@board.Name</h3>
                <img src="@board.ImagePath">
                <span>@board.Price kr.</span>
            </a>
            
            @using (Html.BeginForm("Add", "ShoppingCart", FormMethod.Post))
            {
                <div>
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </div>

                <div>
                    @Html.LabelFor(m => m.Age)
                    @Html.TextBoxFor(m => m.Age)
                    @Html.ValidationMessageFor(m => m.Age)
                </div>

                <button type="submit">Submit</button>
            }

            <form asp-controller="ShoppingCart" asp-action="Index" method="post">
                <input asp-for="@board" name="board" value="@board" hidden />
                <input name="amount" value="1" hidden />
                <button type="submit" class="add-to-basket-button">LÃ¦g i kurv</button>
            </form>
        </div>
    }

</div>