                    <li>Hvem er vi?</li>
                    <li>FAQ</li>
                </ul>
            </li>
            <li>Kontakt os</li>
        </ul>
    </div>
</nav>

<div id="boardInformation">
    <h1>@Model.Name</h1>
    <img src="@Model.ImagePath">
    <h2>Nr. @Model.ProductId</h2>
    <table>
        <tr>
            <th>Type</th>
            <th>Pris</th>
            <th>Længde</th>
            <th>Bredde</th>
            <th>Tykkelse</th>
            <th>Volumen</th>
        </tr>
        <tr>
            <td>@Model.Type</td>
            <td>@Model.Price DKK</td>
            <td>@Model.Length"</td>
            <td>@Model.Width"</td>
            <td>@Model.Thickness"</td>
            <td>@Model.Volume"</td>
        </tr>
    </table>
</div>

<div class="container">
    <div class="bottom">
        <img id="logo-bottom" src="~/images/image-logo.png" alt="logo-bottom">
        <img id="text-bottom" src="~/images/image-logo-text.png" alt="text-bottom">
