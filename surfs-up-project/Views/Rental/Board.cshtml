@model Product;

<nav class="nav-top">
    <div class="header-container">
        <div class="img-container">
            <img id="logo" src="~/images/image-logo.png" alt="Logo">
            <img id="logo-text" src="~/images/image-logo-text.png" alt="Logo Text">
        </div>
        <ul id="menu" class="dropdown">
            <li>Hjem
                <ul class="submenu">
                    <li><a asp-controller="home" asp-action="index">Forside</a></li>
                </ul>
            </li>
            <li>Udlejning
                <ul class="submenu">
                    <li><a asp-controller="rental" asp-action="boards">Boards</a></li>
                    <li><a asp-controller="rental" asp-action="wetsuit">Våddragt</a></li>
                    <li><a asp-controller="rental" asp-action="equipment">Udstyr</a></li>
                    <li>Undervisning - IKKE NØDVENDIG ENDNU</li>
